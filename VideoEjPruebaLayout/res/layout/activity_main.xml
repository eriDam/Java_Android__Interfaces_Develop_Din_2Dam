<!-- LinearLayout es uno de los Layout más utilizado en la práctica.--><!-- El tipo mas básicoDistribuye los elementos (views o viewGroups) uno detrás de otro, bien de forma horizontal o vertical.--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Lay2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.videoejpruebalayout.MainActivity" >

    <!-- fill_parent alarga la anchura o altura al padre -->
    <!-- La opción weight da un peso a los distintos views, sirve para marcar la importancia -->
    <!--la opción layout_gravity, aplicada sobre button, nos permite alinear el elemento
     dentro de su padre y  -->
    <!-- Quitar layout sobre el EditText para alinear el mensaje, el texto dentro de su caja -->

    <Button
        android:id="@+id/Boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/silver"
        android:text="@string/boton" />

    <EditText
        android:id="@+id/editTextPrueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="@string/eTprueba"
        android:textColor="@color/teal" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.videoejpruebalayout.MainActivity" >

        <Button
            android:id="@+id/boton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:background="@color/blue"
            android:text="@string/boton2" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:text="@string/boton3" />
    </LinearLayout>

    <LinearLayout
        style="@color/green"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:background="@color/green" >
    </LinearLayout>

</LinearLayout>